<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verifikasi Akun Anda</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.4/css/boxicons.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Public Sans', sans-serif;
        }
        .code-input {
            letter-spacing: 0.8em;
            text-align: center;
            font-size: 1.5rem;
            font-weight: 700;
            text-indent: 0.5em;
        }
        .background-pattern {
            background-image: linear-gradient(to right, rgba(128, 128, 128, 0.08) 1px, transparent 1px), linear-gradient(to bottom, rgba(128, 128, 128, 0.08) 1px, transparent 1px);
            background-size: 1.5rem 1.5rem;
        }
        .dark .background-pattern {
            background-image: linear-gradient(to right, rgba(255, 255, 255, 0.05) 1px, transparent 1px), linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
        }
        .object-position-upper-center {
            object-position: center 25%;
        }
        #loader {
            transition: opacity 0.5s ease-in-out;
        }
    </style>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-200 transition-colors duration-300">
    <div id="loader" class="fixed inset-0 z-50 flex items-center justify-center bg-white dark:bg-gray-900">
        <div class="relative flex items-center justify-center">
            <div class="w-24 h-24 border-4 border-dashed rounded-full animate-spin border-indigo-500"></div>
            <img src="https://avatars.githubusercontent.com/u/99401498?v=4" alt="Logo" class="absolute w-16 h-16 rounded-full">
        </div>
    </div>

    <div class="fixed inset-0 -z-10 h-full w-full background-pattern"></div>
    <button id="theme-toggle" type="button" class="fixed top-4 right-4 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 z-20">
        <i id="theme-toggle-dark-icon" class='bx bxs-moon text-xl hidden'></i>
        <i id="theme-toggle-light-icon" class='bx bxs-sun text-xl hidden'></i>
    </button>
    <div id="main-content" class="flex min-h-screen w-full flex-col lg:grid lg:grid-cols-2 opacity-0 transition-opacity duration-500">
        <div class="order-1 lg:order-2 h-64 w-full lg:h-screen">
            <img id="authImage" src="" alt="Ilustrasi Autentikasi" class="h-full w-full object-cover object-position-upper-center bg-transparent transition-opacity duration-500 opacity-0">
        </div>
        <div class="order-2 lg:order-1 flex w-full items-center justify-center p-6 sm:p-10">
             <div class="mx-auto w-full max-w-md space-y-6">
                <div class="space-y-2 text-center lg:text-left">
                    <div class="flex items-center justify-center lg:justify-start mb-4">
                        <img src="https://avatars.githubusercontent.com/u/99401498?v=4" alt="Logo WBK PayGateway" class="w-10 h-10 rounded-full">
                        <span class="text-2xl font-bold ml-3">WBK PayGateway</span>
                    </div>
                    <h1 class="text-3xl font-bold">Verifikasi Akun Anda ✉️</h1>
                    <p class="text-gray-500 dark:text-gray-400">
                        Kami telah mengirimkan kode 6 digit ke <strong class="font-semibold text-gray-700 dark:text-gray-300"><%= email %></strong>
                    </p>
                </div>

                <% if (locals.success_messages && success_messages.length > 0) { %>
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded" role="alert"><%= success_messages[0] %></div>
                <% } %>
                <% if (locals.error_messages && error_messages.length > 0) { %>
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert"><%= error_messages[0] %></div>
                <% } %>

                <form action="/auth/verifikasi" method="POST" class="space-y-4">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="email" value="<%= email %>">
                    <div>
                        <label for="code" class="block text-sm font-medium mb-2 text-center lg:text-left">Kode Verifikasi</label>
                        <input type="text" id="code" name="code" class="w-full px-4 py-3 border bg-transparent border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 code-input" maxlength="6" required autofocus>
                    </div>
                    <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-lg font-semibold hover:bg-indigo-700">Verifikasi</button>
                </form>

                <div class="text-center text-sm text-gray-500 dark:text-gray-400">
                    <span>Tidak menerima kode?</span>
                    <a href="/auth/verifikasi/resend" class="font-semibold text-indigo-500 hover:underline">Kirim ulang</a>
                </div>
             </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loader = document.getElementById('loader');
            const mainContent = document.getElementById('main-content');
            const themeToggleBtn = document.getElementById('theme-toggle');
            const darkIcon = document.getElementById('theme-toggle-dark-icon');
            const lightIcon = document.getElementById('theme-toggle-light-icon');
            const authImage = document.getElementById('authImage');
            function showPage() {
                if(loader) loader.classList.add('opacity-0');
                if(mainContent) mainContent.classList.remove('opacity-0');
                setTimeout(() => { if(loader) loader.style.display = 'none'; }, 500);
            }

            function applyTheme() {
                if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                    document.documentElement.classList.add('dark');
                    lightIcon.classList.remove('hidden');
                    darkIcon.classList.add('hidden');
                } else {
                    document.documentElement.classList.remove('dark');
                    darkIcon.classList.remove('hidden');
                    lightIcon.classList.add('hidden');
                }
            }
            themeToggleBtn.addEventListener('click', function() {
                darkIcon.classList.toggle('hidden');
                lightIcon.classList.toggle('hidden');
                if (document.documentElement.classList.contains('dark')) {
                    document.documentElement.classList.remove('dark');
                    localStorage.setItem('color-theme', 'light');
                } else {
                    document.documentElement.classList.add('dark');
                    localStorage.setItem('color-theme', 'dark');
                }
            });
            if (authImage) {
                fetch('https://api.waifu.pics/sfw/waifu')
                    .then(response => {
                        if (!response.ok) throw new Error('Network response was not ok');
                        return response.json();
                    })
                    .then(data => {
                        if (data && data.url) {
                            const img = new Image();
                            img.src = data.url;
                            img.onload = () => {
                                authImage.src = img.src;
                                authImage.classList.remove('opacity-0');
                                showPage();
                            };
                            img.onerror = () => {
                                authImage.src = 'https://placehold.co/1080x1920/e2e8f0/4a5568?text=Image+Not+Found';
                                authImage.classList.remove('opacity-0');
                                showPage();
                            };
                        } else {
                           throw new Error('Invalid data format');
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching authentication image:', error);
                        authImage.src = 'https://placehold.co/1080x1920/e2e8f0/4a5568?text=Image+Not+Found';
                        authImage.classList.remove('opacity-0');
                        showPage();
                    });
            } else {
                showPage();
            }
            applyTheme();
        });
    </script>
</body>
</html>
<%- include('./partials/header') %>

<% if (success_messages.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i><%= success_messages[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if (error_messages.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i><%= error_messages[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Integrasi Notifikasi</h1>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-telegram fs-2 text-primary me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Telegram</h5>
                        <small class="text-muted">Terima notifikasi transaksi langsung di Telegram.</small>
                    </div>
                </div>
                <p class="small">Hubungkan bot Telegram Anda untuk mendapatkan notifikasi instan setiap kali transaksi berhasil. Pastikan Anda sudah memulai chat dengan bot Anda (/start).</p>
                <form action="/member/integration/telegram" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="mb-3">
                        <label for="token_bot" class="form-label">Token Bot</label>
                        <input type="password" class="form-control" id="token_bot" name="token_bot" value="<%= user.telegram && user.telegram.token_bot ? user.telegram.token_bot : '' %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="chat_id" class="form-label">Chat ID</label>
                        <input type="text" class="form-control" id="chat_id" name="chat_id" value="<%= user.telegram && user.telegram.chat_id ? user.telegram.chat_id : '' %>" required>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Simpan & Uji Koneksi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card h-100 opacity-50">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-discord fs-2 me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Discord</h5>
                        <small class="text-muted">Terima notifikasi via Webhook Discord.</small>
                    </div>
                </div>
                 <p class="small">Kirim notifikasi transaksi langsung ke channel Discord Anda menggunakan webhook.</p>
                 <div class="text-center mt-4">
                     <span class="badge bg-secondary">Segera Hadir</span>
                 </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card h-100 opacity-50">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-whatsapp fs-2 text-success me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">WhatsApp</h5>
                        <small class="text-muted">Terima notifikasi via WhatsApp Gateway.</small>
                    </div>
                </div>
                 <p class="small">Dapatkan notifikasi transaksi real-time langsung ke nomor WhatsApp Anda.</p>
                 <div class="text-center mt-4">
                     <span class="badge bg-secondary">Segera Hadir</span>
                 </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
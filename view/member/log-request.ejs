<%- include('./partials/header') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Log Request API</h1>
</div>

<div class="card">
    <div class="card-body">
        <% if (user.apiRequestLogs && user.apiRequestLogs.length > 0) { %>
            <div class="accordion" id="logAccordion">
                <% user.apiRequestLogs.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp)).forEach((log, index) => { %>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= index %>">
                                <div class="d-flex w-100 justify-content-between align-items-center pe-3">
                                    <div class="d-flex align-items-center">
                                        <% 
                                            let statusClass = 'bg-secondary-subtle text-secondary-emphasis';
                                            if (log.responseStatus >= 200 && log.responseStatus < 300) statusClass = 'bg-success-subtle text-success-emphasis';
                                            if (log.responseStatus >= 400) statusClass = 'bg-danger-subtle text-danger-emphasis';
                                        %>
                                        <span class="badge <%= statusClass %> me-3"><%= log.responseStatus %></span>
                                        <span class="badge bg-primary-subtle text-primary-emphasis me-2"><%= log.method %></span>
                                        <code class="fw-semibold small"><%= log.endpoint %></code>
                                    </div>
                                    <span class="text-muted small"><%= new Date(log.timestamp).toLocaleString('id-ID', { dateStyle: 'medium', timeStyle: 'short' }) %></span>
                                </div>
                            </button>
                        </h2>
                        <div id="collapse-<%= index %>" class="accordion-collapse collapse" data-bs-parent="#logAccordion">
                            <div class="accordion-body bg-light-subtle">
                                <p class="mb-2 small text-muted"><strong>Alamat IP:</strong> <%= log.ipAddress %></p>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="small">Request Body</h6>
                                        <pre><code class="json bg-white p-2 rounded d-block"><%= log.requestBody %></code></pre>
                                    </div>
                                    <div class="col-md-6 mt-3 mt-md-0">
                                        <h6 class="small">Response Body</h6>
                                        <pre><code class="json bg-white p-2 rounded d-block"><%= log.responseBody %></code></pre>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center p-5">
                <p class="mb-0">Belum ada log request API yang tercatat.</p>
            </div>
        <% } %>
    </div>
</div>

<style>
    .accordion-button:not(.collapsed) {
        box-shadow: none;
    }
    .accordion-button::after {
        flex-shrink: 0;
    }
    pre code {
        white-space: pre-wrap;
        word-break: break-all;
    }
</style>

<%- include('./partials/footer') %>
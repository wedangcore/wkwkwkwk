<%- include('../member/partials/header') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Transaksi Realtime</h1>
</div>

<div class="card mb-4">
    <div class="card-body p-3">
        <div class="row g-3 text-center">
            <%
                const total = transactions.length;
                const sukses = transactions.filter(t => t.status === 'sukses').length;
                const pending = transactions.filter(t => t.status === 'pending').length;
                const gagal = transactions.filter(t => t.status === 'gagal').length;
                const totalUangSukses = transactions.filter(t => t.status === 'sukses').reduce((sum, t) => sum + t.amount, 0);
                const totalOmset = transactions.filter(t => t.status === 'sukses').reduce((sum, t) => sum + t.feeAmount + t.uniqueNumber, 0);
            %>
            <div class="col-6 col-md-3">
                <small class="text-muted d-block">Total Transaksi</small>
                <h6 class="fw-bold mb-0"><%= total %></h6>
            </div>
            <div class="col-6 col-md-3">
                <small class="text-muted d-block">Trx Sukses</small>
                <h6 class="fw-bold mb-0"><%= sukses %></h6>
            </div>
            <div class="col-6 col-md-3">
                <small class="text-muted d-block">Trx Pending</small>
                <h6 class="fw-bold mb-0"><%= pending %></h6>
            </div>
            <div class="col-6 col-md-3">
                <small class="text-muted d-block">Trx Gagal</small>
                <h6 class="fw-bold mb-0"><%= gagal %></h6>
            </div>
        </div>
        <div class="row g-3 mt-1">
            <div class="col-md-6">
                <div class="bg-success-subtle rounded-2 p-2 text-center">
                    <small class="text-muted d-block">Total Omset (Fee + Unik)</small>
                    <h6 class="fw-bold mb-0 text-success-emphasis"><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(totalOmset) %></h6>
                </div>
            </div>
            <div class="col-md-6">
                <div class="bg-primary-subtle rounded-2 p-2 text-center">
                    <small class="text-muted d-block">Total Uang Diterima (Bruto)</small>
                    <h6 class="fw-bold mb-0 text-primary-emphasis"><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(totalUangSukses) %></h6>
                </div>
            </div>
        </div>
    </div>
</div>


<% if (transactions && transactions.length > 0) { %>
    <div class="d-none d-lg-block">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID Transaksi</th>
                                <th>Pemilik</th>
                                <th>Total Bayar</th>
                                <th>Metode</th>
                                <th>Tanggal</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(tx => { %>
                                <tr class="main-row">
                                    <td><code class="fw-semibold"><%= tx.transactionId %></code></td>
                                    <td><span class="badge bg-secondary-subtle text-secondary-emphasis"><%= tx.owner %></span></td>
                                    <td class="fw-bold"><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(tx.amount) %></td>
                                    <td><span class="badge bg-primary-subtle text-primary-emphasis"><%= tx.paymentMethod %></span></td>
                                    <td><%= new Date(tx.createdAt).toLocaleString('id-ID', { dateStyle: 'medium', timeStyle: 'short' }) %></td>
                                    <td class="text-center">
                                        <% if (tx.status === 'sukses') { %>
                                            <span class="badge bg-success-subtle text-success-emphasis">Sukses</span>
                                        <% } else if (tx.status === 'pending') { %>
                                            <span class="badge bg-warning-subtle text-warning-emphasis">Pending</span>
                                        <% } else { %>
                                            <span class="badge bg-danger-subtle text-danger-emphasis">Gagal</span>
                                        <% } %>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#details-desktop-<%= tx.transactionId %>">
                                            <i class="bi bi-info-circle"></i> Detail
                                        </button>
                                    </td>
                                </tr>
                                <tr class="detail-row">
                                    <td colspan="7" class="p-0" style="border: 0;">
                                        <div class="collapse" id="details-desktop-<%= tx.transactionId %>">
                                            <div class="p-3 bg-light-subtle">
                                                <h6 class="mb-3">Rincian Pembayaran</h6>
                                                <ul class="list-group list-group-flush small">
                                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">Jumlah Dasar<span><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(tx.baseAmount || 0) %></span></li>
                                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">Biaya Admin<span><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(tx.feeAmount || 0) %></span></li>
                                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">Kode Unik<span><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(tx.uniqueNumber || 0) %></span></li>
                                                    <% if (tx.paymentUrl) { %>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">URL Pembayaran<span><a href="<%= tx.paymentUrl %>" target="_blank">Lihat</a></span></li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="d-lg-none">
        <% transactions.forEach(tx => { %>
            <div class="card mb-3">
                <div class="card-header bg-light-subtle small d-flex justify-content-between">
                    <code class="fw-semibold"><%= tx.transactionId %></code>
                    <span class="badge bg-secondary-subtle text-secondary-emphasis"><%= tx.owner %></span>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="mb-1"><strong>Metode:</strong> <%= tx.paymentMethod %></p>
                            <p class="mb-0 text-muted small"><%= new Date(tx.createdAt).toLocaleString('id-ID', { dateStyle: 'medium', timeStyle: 'short' }) %></p>
                        </div>
                        <div class="text-end">
                            <h5 class="fw-bold mb-1"><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(tx.amount) %></h5>
                             <% if (tx.status === 'sukses') { %>
                                <span class="badge bg-success-subtle text-success-emphasis">Sukses</span>
                            <% } else if (tx.status === 'pending') { %>
                                <span class="badge bg-warning-subtle text-warning-emphasis">Pending</span>
                            <% } else { %>
                                <span class="badge bg-danger-subtle text-danger-emphasis">Gagal</span>
                            <% } %>
                        </div>
                    </div>
                    <div class="collapse" id="details-mobile-<%= tx.transactionId %>">
                        <hr>
                        <h6 class="mb-2 small">Rincian Pembayaran</h6>
                        <ul class="list-group list-group-flush small">
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">Jumlah Dasar<span><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(tx.baseAmount || 0) %></span></li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">Biaya Admin<span><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(tx.feeAmount || 0) %></span></li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">Kode Unik<span><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(tx.uniqueNumber || 0) %></span></li>
                             <% if (tx.paymentUrl) { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">URL Pembayaran<span><a href="<%= tx.paymentUrl %>" target="_blank">Lihat</a></span></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-outline-secondary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#details-mobile-<%= tx.transactionId %>">
                        Tampilkan/Sembunyikan Detail
                    </button>
                </div>
            </div>
        <% }) %>
    </div>

<% } else { %>
    <div class="card">
        <div class="card-body text-center p-5">
            <p class="mb-0">Belum ada transaksi yang tercatat.</p>
        </div>
    </div>
<% } %>

<%- include('../member/partials/footer') %>
<%- include('../member/partials/header') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Manajemen Member</h1>
    <span class="badge bg-primary rounded-pill"><%= members.length %> Total Member</span>
</div>

<% if (members && members.length > 0) { %>
    <div class="card d-none d-lg-block">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nama</th>
                            <th>Email</th>
                            <th>No. Telepon</th>
                            <th class="text-center">Total Transaksi</th>
                            <th class="text-center">Status</th>
                            <th>Tanggal Bergabung</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% members.forEach(member => { %>
                            <tr>
                                <td>
                                    <div class="fw-bold"><%= member.name %></div>
                                    <div class="text-muted small">@<%= member.username %></div>
                                </td>
                                <td><%= member.email %></td>
                                <td><%= member.no_telp %></td>
                                <td class="text-center"><%= member.transaksi.total || 0 %></td>
                                <td class="text-center">
                                    <% if (member.isVerified) { %>
                                        <span class="badge bg-success-subtle text-success-emphasis">Terverifikasi</span>
                                    <% } else { %>
                                        <span class="badge bg-warning-subtle text-warning-emphasis">Belum Verifikasi</span>
                                    <% } %>
                                </td>
                                <td><%= new Date(member.createdAt).toLocaleDateString('id-ID', { dateStyle: 'medium' }) %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-lg-none">
        <% members.forEach(member => { %>
            <div class="card mb-3">
                <div class="card-header bg-light-subtle d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold"><%= member.name %></div>
                        <div class="text-muted small">@<%= member.username %></div>
                    </div>
                    <% if (member.isVerified) { %>
                        <span class="badge bg-success-subtle text-success-emphasis">Terverifikasi</span>
                    <% } else { %>
                        <span class="badge bg-warning-subtle text-warning-emphasis">Belum Verifikasi</span>
                    <% } %>
                </div>
                <div class="card-body small">
                    <p class="mb-2"><strong>Email:</strong><br><%= member.email %></p>
                    <p class="mb-2"><strong>No. Telp:</strong><br><%= member.no_telp %></p>
                    <p class="mb-2"><strong>Total Transaksi:</strong> <%= member.transaksi.total || 0 %></p>
                    <p class="mb-0 text-muted"><strong>Bergabung:</strong> <%= new Date(member.createdAt).toLocaleDateString('id-ID', { dateStyle: 'medium' }) %></p>
                </div>
            </div>
        <% }) %>
    </div>

<% } else { %>
    <div class="card">
        <div class="card-body text-center p-5">
            <p class="mb-0">Tidak ada member yang terdaftar.</p>
        </div>
    </div>
<% } %>

<%- include('../member/partials/footer') %>